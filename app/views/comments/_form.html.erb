<%= form_for([@posting,@comment]) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :cols => 30, :rows => 5,:class =>'span6' %>
  </div>
  <%=f.hidden_field :user_id, :value=>current_user.uid%>
  <%=f.hidden_field :user_name, :value=>current_user.name%>
  <%=f.hidden_field :posting_id, :value=>@posting.id%>
  <%=f.hidden_field :commented_on, :value=>Time.now%>
  <div class="actions">
    <%= f.submit :class=>'btn btn-success'  %>
  </div>
<% end %>
